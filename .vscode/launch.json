    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug space",
            "cargo": {
                "args": [
                    "build",
                    "--features",
                    "use_gtk"
                ],
                "filter": {
                    "name": "space",
                    "kind": "bin"
                }
            },
            "args": [
                "--features",
                "use_gtk"
            ],
            "cwd": "${workspaceFolder}",
        }
    ]
}